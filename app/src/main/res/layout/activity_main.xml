<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#389">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appTitle"
            android:text="@string/appTitle"
            android:textSize="55sp"
            android:paddingBottom="21sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:layout_marginTop="33sp"
            android:textColor="#ffffff"
            android:layout_below="@id/achievementIcon"
            />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/appAuthor"
              android:textColor="#ffffff"
              android:textSize="21sp"
              android:layout_alignBottom="@id/appTitle"
              android:layout_alignEnd="@id/appTitle"
              android:fontFamily="serif"
    />

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/guarantee"
               android:id="@+id/achievementIcon"
               android:maxHeight="180sp"
               android:maxWidth="180sp"
               android:scaleType="fitCenter"
               android:adjustViewBounds="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="180sp"
    />
</RelativeLayout>